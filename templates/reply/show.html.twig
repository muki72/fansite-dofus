{% extends 'base.html.twig' %}

{% block title %}Reply{% endblock %}

{% block body %}
    <h1>Reply</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reply.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ reply.text }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ reply.img }}</td>
            </tr>
            <tr>
                <th>VoteScore</th>
                <td>{{ reply.voteScore }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reply.date ? reply.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reply_index') }}">back to list</a>

    <a href="{{ path('app_reply_edit', {'id': reply.id}) }}">edit</a>

    {{ include('reply/_delete_form.html.twig') }}
{% endblock %}
